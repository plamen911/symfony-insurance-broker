{% extends 'base.html.twig' %}

{% block breadcrumbs %}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('policy_index') }}">Списък</a></li>
            <li class="breadcrumb-item active" aria-current="page">Полица {{ policy.policyType.name }} No: {{ policy.idNumber }}</li>
        </ol>
    </nav>
{% endblock %}

{% block body %}
    <h3>Редактиране на полица {{ policy.policyType.name }}</h3>
    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}, 'multipart': true}) }}
    <div class="row">
        <div class="col-md-12">
            <div class="text-muted mb-2">
                <small>
                    Създадена на {{ policy.createdAt|date('d.m.Y H:i:s') }} ч. от {{ policy.author.fullName }} |
                    Последна редакция на {{ policy.updatedAt|date('d.m.Y H:i:s') }} ч. от {{ policy.updater.fullName }}
                </small>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            {% include 'policy/forms/policy.html.twig' %}
        </div>
        <div class="col-md-6">
            <div class="accordion" id="accordionCar">
                <div class="card">
                    {% if policy.car %}
                        <div class="card-header" id="headingVehicle">
                            <h5 class="mb-0">
                                <a href="#" data-toggle="collapse" data-target="#collapseVehicle"
                                   aria-expanded="true" aria-controls="collapseVehicle">
                                    МПС: <small>{{ policy.car.carMake }} {{ policy.car.carModel }}</small>
                                </a>
                                {#<a href="{{ path('car_new_owner', {'car': car.id, 'type': 'owner', 'ref': refUrl}) }}"
                                   class="float-right text-dark"
                                   title="Смяна на МПС"><i class="fas fa-exchange-alt"></i></a>#}
                            </h5>
                        </div>
                        <div id="collapseVehicle" class="collapse show" aria-labelledby="headingVehicle"
                             data-parent="#accordionCar">
                            TODO: include car form...
                        </div>
                    {% else %}
                        <div class="card-header">
                            <a href="{{ path('car_new_owner', {'car': car.id, 'type': 'owner', 'ref': refUrl}) }}"
                               title="Добави МПС" class="btn btn-warning float-right"
                            ><i class="fas fa-user-plus"></i> Добави МПС</a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 mt-2">
            {% include 'policy/forms/payments.html.twig' %}
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 mt-3">
            <a href="{{ path('policy_index') }}" class="btn btn-secondary"><i class="fas fa-undo-alt"></i> Отмени</a>
            <button type="submit" class="btn btn-dark float-right"><i class="fa fa-check"></i> Съхрани</button>
            {#<a href="#"
               onclick="event.preventDefault(); document.getElementById('delete-policy-form').submit();"
               class="btn btn-danger float-right mr-2"><i class="far fa-trash-alt"></i> Изтрий</a>#}
        </div>
    </div>
    {{ form_end(form) }}
    {{ form_start(delete_form, {'attr': {'id': 'delete-policy-form', 'class': 'd-none'}}) }}
    {{ form_end(delete_form) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/policy-form.js') }}"></script>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .payments > li > div:first-child {
            display: flex;
        }
    </style>
{% endblock %}
