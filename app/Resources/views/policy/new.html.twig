{% extends 'base.html.twig' %}

{% block breadcrumbs %}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('policy_index') }}">Списък</a></li>
            <li class="breadcrumb-item active" aria-current="page">Нова полица {{ policy.policyType.name }} - Основни данни</li>
        </ol>
    </nav>
{% endblock %}

{% block body %}
    <h3>Нова полица {{ policy.policyType.name }}
        <small class="text-muted">Основни данни</small>
    </h3>
    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}, 'multipart': true}) }}
        {% include 'policy/partials/form-fields.html.twig' %}
        <div class="row">
            <div class="col-md-12 mt-3">
                <a href="{{ path('policy_index') }}" class="btn btn-secondary"><i class="fas fa-undo-alt"></i> Отмени</a>
                <button type="submit" class="btn btn-dark float-right"><i class="fa fa-check"></i> Съхрани</button>
            </div>
        </div>
    {{ form_end(form) }}

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/policy-form.js') }}"></script>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .payments > li > div:first-child {
            display: flex;
        }
    </style>
{% endblock %}
