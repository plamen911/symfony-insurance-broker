{% extends 'base.html.twig' %}

{% block title %}Списък сметки{% endblock %}

{% block breadcrumbs %}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item active" aria-current="page">Списък</li>
        </ol>
    </nav>
{% endblock %}

{% block body %}
    <h3>Списък сметки</h3>
    <div id="bills" class="table-responsive">Зареждане...</div>
    <div class="row">
        <div class="col-md-12">
            <a href="{{ path('bill_new') }}" class="btn btn-dark"><i
                        class="fas fa-plus-circle"></i> Новс сметка</a>
            <a href="{{ path('quick_input', {'type': 'bill'}) }}" class="btn btn-secondary"><i
                        class="fas fa-plus-circle"></i> Бързо въвеждане</a>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/pdfmake.min.js"></script>
    <script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/vfs_fonts.js"></script>
    <script type="text/javascript"
            src="//cdn.datatables.net/v/bs4/jszip-2.5.0/dt-1.10.18/b-1.5.4/b-html5-1.5.4/b-print-1.5.4/r-2.2.2/datatables.min.js"></script>
    <script src="{{ asset('bundles/datatables/js/datatables.js') }}"></script>
    <script>
      $(function () {
        $('#bills').initDataTables({{ datatable_settings(datatable) }}, {
          language: {
            url: 'https://cdn.datatables.net/plug-ins/1.10.15/i18n/Bulgarian.json'
          },
          searching: true,
          dom: '<"html5buttons"B>lTfgitp',
          buttons: [
            'copy',
            {extend: 'pdf', title: 'spisak_koli'},
            {extend: 'print'}
          ],

          stateSaveCallback: function (settings, data) {
            console.log('state saved...')
            // localStorage.setItem('DataTables_' + settings.sInstance, JSON.stringify(data))
          }

        }).then(function (dt) {
          // dt contains the initialized instance of DataTables
          dt.on('draw', function (el1, el2) {
            console.log('Redrawing table')
          })
        })
      })
    </script>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css"
          href="//cdn.datatables.net/v/bs4/jszip-2.5.0/dt-1.10.18/b-1.5.4/b-html5-1.5.4/b-print-1.5.4/r-2.2.2/datatables.min.css"/>
{% endblock %}
