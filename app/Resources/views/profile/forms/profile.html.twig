<div class="row">
    <div class="col-md-6">
        {{ form_row(form.full_name) }}
        {{ form_row(form.email) }}
    </div>
    <div class="col-md-6">
        {{ form_row(form.old_password) }}
        {{ form_row(form.new_password) }}
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <label>Роли:</label>
        <ul class="list-unstyled">
            {% for role in user.profileRoles %}
                <li>{{ role.title }}</li>
            {% endfor %}
        </ul>
    </div>
</div>
