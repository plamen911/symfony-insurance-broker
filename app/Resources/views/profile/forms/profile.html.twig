<div class="row">
    <div class="col-md-6">
        {{ form_row(form.full_name) }}
        {{ form_row(form.email) }}
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label class="control-label" for="old_password">Стара парола</label>
            <input type="password" class="form-control" id="old_password" placeholder="Стара парола"
                   name="old_password"/>
        </div>
        <div class="form-group">
            <label class="control-label" for="new_password">Нова парола</label>
            <input type="password" class="form-control" id="new_password" placeholder="Нова парола"
                   name="new_password"/>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        {% if app.user.isAdmin() %}
            {{ form_row(form.profileRoles) }}
        {% else %}
            <label>Права:</label>
            <ul class="list-unstyled">
                {% for role in user.profileRoles %}
                    <li>{{ role.title }}</li>
                {% endfor %}
            </ul>
        {% endif %}
    </div>
</div>

