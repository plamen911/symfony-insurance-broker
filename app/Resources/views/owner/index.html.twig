{% extends 'base.html.twig' %}

{% block body %}
    <h1>Owners list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Firstname</th>
                <th>Middlename</th>
                <th>Lastname</th>
                <th>Idnumber</th>
                <th>City</th>
                <th>Street</th>
                <th>Phone</th>
                <th>Phone2</th>
                <th>Email</th>
                <th>Email2</th>
                <th>Notes</th>
                <th>Createdat</th>
                <th>Updatedat</th>
                <th>Isdeleted</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for client in clients %}
            <tr>
                <td><a href="{{ path('owner_show', { 'id': client.id }) }}">{{ client.id }}</a></td>
                <td>{{ client.firstName }}</td>
                <td>{{ client.middleName }}</td>
                <td>{{ client.lastName }}</td>
                <td>{{ client.idNumber }}</td>
                <td>{{ client.city }}</td>
                <td>{{ client.street }}</td>
                <td>{{ client.phone }}</td>
                <td>{{ client.phone2 }}</td>
                <td>{{ client.email }}</td>
                <td>{{ client.email2 }}</td>
                <td>{{ client.notes }}</td>
                <td>{% if client.createdAt %}{{ client.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if client.updatedAt %}{{ client.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if client.isDeleted %}Yes{% else %}No{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('owner_show', { 'id': client.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('owner_edit', { 'id': client.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('owner_new') }}">Create a new client</a>
        </li>
    </ul>
{% endblock %}
