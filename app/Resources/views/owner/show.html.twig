{% extends 'base.html.twig' %}

{% block body %}
    <h1>Owner</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ owner.id }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ owner.firstName }}</td>
            </tr>
            <tr>
                <th>Middlename</th>
                <td>{{ owner.middleName }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ owner.lastName }}</td>
            </tr>
            <tr>
                <th>Idnumber</th>
                <td>{{ owner.idNumber }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ owner.city }}</td>
            </tr>
            <tr>
                <th>Street</th>
                <td>{{ owner.street }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ owner.phone }}</td>
            </tr>
            <tr>
                <th>Phone2</th>
                <td>{{ owner.phone2 }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ owner.email }}</td>
            </tr>
            <tr>
                <th>Email2</th>
                <td>{{ owner.email2 }}</td>
            </tr>
            <tr>
                <th>Notes</th>
                <td>{{ owner.notes }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if owner.createdAt %}{{ owner.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{% if owner.updatedAt %}{{ owner.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Isdeleted</th>
                <td>{% if owner.isDeleted %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('owner_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('owner_edit', { 'id': owner.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
