{% extends 'base.html.twig' %}

{% block title %}Създаване на профил{% endblock %}

{% block breadcrumbs %}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('user_index') }}">Списък</a></li>
            <li class="breadcrumb-item active" aria-current="page">Създаване на профил</li>
        </ol>
    </nav>
{% endblock %}

{% block body %}
    <h3>Създаване на профил</h3>
    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}, 'multipart': true}) }}
    <div class="row">
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-6">
                    {{ form_row(form.full_name) }}
                    {{ form_row(form.email) }}
                    {{ form_row(form.enabled) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.password) }}
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    {{ form_row(form.profileRoles) }}
                </div>
            </div>
            <button type="submit" class="btn btn-dark"><i class="fa fa-check"></i> Съхрани</button>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
